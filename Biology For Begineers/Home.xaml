<Page
    x:Class="Biology_For_Begineers.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Biology_For_Begineers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <NavigationView SelectionChanged="tappedContent"
                        >
            <NavigationView.Header>
                <TextBlock Text="Quiz Catergories"
                           Foreground="Black"/>
            </NavigationView.Header>
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Mammals"/>
                <NavigationViewItem Content="Birds"/>
                <NavigationViewItem Content="Marine"/>
                <NavigationViewItem Content="Reptiles"/>
            </NavigationView.MenuItems>
            <Grid>
                <Frame x:Name = "Frame"/>
            </Grid >
        </NavigationView>
    </Grid>
</Page>